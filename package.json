{
  "name": "reaktion",
  "version": "0.0.0",
  "description": "Next generation health management library to replace useState.",
  "author": {
    "name": "Seokhyeon Jang",
    "email": "coolman555@me.com",
    "url": "https://github.com/devxian96"
  },
  "homepage": "https://github.com/whitekiwi/graphql-request-helper",
  "bugs": {
    "url": "https://github.com/devxian96/reaktion/issues",
    "email": "coolman555@me.com"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "reactjs",
    "useState",
    "reaktion",
    "state",
    "exNext",
    "commonJS"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devxian96/reaktion.git"
  },
  "main": "dist/index.js",
  "private": false,
  "scripts": {
    "dev": "yarn --cwd ./test dev",
    "build": "rm -rf ./dist && tsc",
    "prepare": "yarn build"
  },
  "files": [
    "lib"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vitejs/plugin-react": "^2.0.1",
    "eslint": "^8.22.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.7"
  }
}