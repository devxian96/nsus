{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "typeRoots": [
            "index.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}